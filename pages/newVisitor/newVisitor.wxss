      margin-top: 32rpx;
}
.new_vis_box .row{
      width: 100%;
      line-height: 101rpx;
      margin-bottom: 25rpx;
      background-color: white;
}
.new_vis_box .row:last-child{
      margin-bottom: 0;
      padding-bottom: 33rpx;
}
.new_vis_box .no_bc{
      background-color: rgba(0, 0, 0, 0);
}
.new_vis_box .row .l_col{
      width: 26%;
