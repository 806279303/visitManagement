      vertical-align: middle;
      font-size: 36rpx;
      color:rgb(167,166,166);
}
.new_vis_box .row .r_col input[type="text"]{
      width: 100%;
      height: 80rpx;
      /* border:2rpx solid #313131; */
      display: inline-block;
      vertical-align: middle;
      color:rgb(43,43,43);
}


.new_vis_box .row .r_col .causeInput{
