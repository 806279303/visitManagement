}



.new_vis_box .row .new_interviewee{
      position: relative;
}
.new_vis_box .row .new_interviewee input[type="text"]{
      width: 91%;
}
.new_vis_box .row .new_interviewee .vis_del{
      width: 30rpx;
      height: 30rpx;
      border-radius: 50%;
      background-color:rgb(194, 193, 193);
      color: white;
      text-align: center;
      line-height: 25rpx;
      vertical-align: middle;
      font-size: 30rpx;
      font-weight: 500;
      display: inline-block;
      margin-left: 10rpx;
}
.new_vis_box .row .new_interviewee .visited_select{
      width: 91%;
      position: absolute;
      top: 80rpx;
      min-height: 60rpx;
      max-height: 200rpx;
      box-shadow: 0 2rpx 5rpx rgba(0, 0, 0,.4);
      border-top: 1rpx solid #f0f0f0;
      background-color: rgb(255, 255, 255);
}
.new_vis_box .row .new_interviewee .visited_select view{
      width: 100%;
      height: 60rpx;
      border-right: 1rpx solid #b6b6b6;
      border-left: 1rpx solid #b6b6b6;
      border-bottom: 1rpx solid #b6b6b6;
      font-size: 25rpx;
      line-height: 60rpx;
      box-sizing: border-box;
      padding-right: 10rpx;
      color:#313131;
}





.new_vis_box .row .accompany_peo .vis_accompany{
      width: 35rpx;
      height: 35rpx;
      border-radius: 50%;
