/* components/userInfo/userInfo.wxss */
.global_linear_gradient{
      background-color: rgb(0, 107, 247); /* 不支持线性的时候显示 */
      background-image: linear-gradient(to right, rgb(0,210,255) , rgb(0,114,255));
      color:white;
}
.global_linear_gradient:active{
      background-color: rgb(1, 89, 204); /* 不支持线性的时候显示 */
      background-image: linear-gradient(to right, rgb(0,210,255) , rgb(0,114,255));
      color:rgb(218, 214, 214);
}




.user_info{
      width: 100%;
}
.user_info .user_photo{
      width: 100%;
      padding:53rpx 61rpx 0 61rpx;
      box-sizing: border-box;
}
.user_info .user_photo .user_photo_img{
      width: 100%;
      display: flex;
      justify-content:center;
      /* background-color: darkblue; */
}
.user_info .user_photo .user_photo_img view{
      height: 359rpx;
}
.user_info .user_photo .user_photo_img .user_photo_img_l{
      display: flex;
      align-items: center;
      color:white;
      font-size: 32rpx;
      color:rgb(56,56,56);
}
.user_info .user_photo .user_photo_img .user_photo_img_m{
      width: 478rpx;
      border:2rpx solid rgb(170,170,170);
      background-color: white;
      overflow: hidden;
}
.user_info .user_photo .user_photo_img .user_photo_img_m image{
      width: 100%;
      height: 100%;
}
.user_info .user_photo .user_photo_img .user_photo_img_r{
      display: flex;
      align-items: center;
      color:white;
      font-size: 32rpx;
      color:rgb(56,56,56);
}

.user_info .user_photo .user_photo_btn button{
      width: 236rpx;
      height: 66rpx;
      border-radius: 40rpx;
      color:rgb(255,251,230);
      font-weight: normal;
      margin-top: 28rpx;
      margin-bottom: 33rpx;
      font-size: 36rpx;
      white-space:nowrap;
}







.user_info .user_info_row{
      width: 100%;
      box-sizing: border-box;
      padding:0 26rpx 0 29rpx;
      margin-bottom: 32rpx;
      background-color: white;
}
.user_info .user_info_row view{
      display: inline-block;
      height: 100rpx;
}
.user_info .user_info_row .user_info_row_l{
      width: 25%;
      /* border:2rpx solid #313131; */
      vertical-align: middle;
      font-size: 36rpx;
      color:rgb(43,43,43);
}
.user_info .user_info_row .user_info_row_l text{
      display: inline-block;
      vertical-align: middle;
      line-height: 35rpx;
}
.user_info .user_info_row .user_info_row_l .red_star{
      color:rgb(255,50,50);
}
.user_info .user_info_row .user_info_row_r{
      width: 70%;
      height: 100rpx;
      /* background-color: rgb(201, 119, 119); */
      background-color: white;
      vertical-align: middle;
}
.user_info .user_info_row .user_info_row_r input[type="text"]{
      width: 100%;
      height: 100rpx;
      border:none;
      padding: 0 10rpx;
      box-sizing: border-box;
      display: block;
      text-align: right;
      font-size: 35rpx;
}
.user_info .user_info_row .user_info_del{
      width: 30rpx;
      height: 30rpx;
      border-radius: 50%;
      background-color:rgb(194, 193, 193);
      color: white;
      text-align: center;
      line-height: 25rpx;
      vertical-align: middle;
      font-size: 25rpx;
      font-weight: bold;
}







.user_info .user_info_handles{
      width: 100%;
      position: absolute;
      bottom:0;
      left: 0;
      box-sizing: border-box;
      display: flex;

}
.user_info .user_info_handles view{
      width: 50%;
      height:96rpx;
      text-align: center;
      line-height: 96rpx;
      border-top: 1rpx solid rgb(226,226,226);
}
.user_info .user_info_handles .user_info_handles_l{
      background-color: white;
      color:rgb(20,141,224);
}
