/* components/history/history.wxss */
.message_tip{
      width: 100%;
      background-color: white;
      padding: 20rpx 0 53rpx 25rpx;
      margin-bottom: 8rpx;
}
.message_tip .message_tip_header{
      color: rgb(172,172,172);
      font-size: 30rpx;
      /* line-height: 30rpx; */
}
.message_tip .message_tip_info{
      text-align: center;
      color: rgb(82, 82, 82);
      margin-top: 21rpx;
}
.message_tip .message_tip_info text{
      display: inline-block;
      line-height: 0;
      color:rgb(103,103,103);
      font-size: 34rpx;
}
.message_tip .message_tip_info .high_light{
      font-size: 40rpx;
      font-weight: 300;
      color:rgb(255,52,52);
}
.message_tip .message_tip_dec{
      width: 100%;
      text-align: center;
      font-size:20rpx;
      color:rgb(255,52,52);
      margin: 33rpx 0 0 0 ;
}






.one_his_app{
      width: 100%;
      background-color: rgb(255, 255, 255);
      /* border-bottom: 1rpx solid black; */
      margin-bottom: 3rpx;
      padding: 42rpx 0 55rpx 26rpx;
      position: relative;
      box-sizing: border-box;
}
.one_his_app .his_time{
      /* margin-bottom: 9rpx; */
}
.one_his_app .his_time text{
      display: inline-block;
      line-height: 0;
      font-size: 30rpx;
      color: rgb(172,172,172);
      letter-spacing: 3rpx;
}



.one_his_app .his_info{
      width: 100%;
      box-sizing: border-box;
      padding:24rpx 0 0 128rpx;
      color: rgb(82, 82, 82);
      /* background-color: burlywood; */
}
.one_his_app .his_info .his_info_row{
      width: 100%;
      /* background-color: chartreuse; */
      /* line-height: 45rpx; */
