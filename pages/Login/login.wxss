/**index.wxss**/

page { background-color: white }

.c-page-wrapper{
  background: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  height: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  margin: 10px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.cell-group {
   display: block;
   width: 90%;
   align-self: center;
}

.login-back{
    display: flex;
    width: 100%;
    height: 280px;
    position: relative;
}

.background-image{
    height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}

.login-content{
    display: flex;
    flex-direction: column;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
}

.login-image {
   height: 100px;
   width: 100px;
   margin-left: 2px;
   margin-right: 5px;
   margin-top: 80px;  
   align-self: center;
   justify-content: center;
   align-items: center;
   flex-direction: column;
}

.login-text {
   align-self: center;
   font-size: 18px;
   margin-top: 0px;
   margin-bottom: 20px;
   color: white;
   flex-direction: column;
}

.login-button {
   height: 44px;
   width: 80%;
   margin-top: 30px;  
   align-self: center;
   background:linear-gradient(to right, #43CBF4 , #40A1F7);
   color:white;
   border-radius: 49px; 
   box-shadow: 1px 8px 10px #B8DDF9;
}

.login-button-active{
  background: rgb(4, 113, 156);
}

.login-button::after {
  border-radius: 49px;
}

.cell-field {
   display: block;
   color: blue;
   background-color: rebeccapurple
}

.picker-view {
  display: block;
  height: 50px;
  width: 100%;
}

.usermotto {
  margin-top: 200px;
}

.login-cell{
   display: flex;
   height: 60px;
   width: 80%;
   border: 1px red solid;
   align-self: center;
   border-bottom-color: #45C2F5;
   border-top-color: white;
   border-left-color: white;
   border-right-color: white;
   background-color: white;
}

.login-icon{ 
   height: 25px;
   width: 25px;
   margin-left: 10px;
   align-self: center;
}

.login-input{
    
    margin-left: 10px;
    background-color: white;
    text-align: left;
    display: flex;
    align-items: center;
    position: relative;
    height: 60px;
    font-size: 16px;
    flex-basis: 80px;
    flex-grow: 1;
    margin-right: 10px;
    color: #818181;
}

