.circle-text{
  display: flex;
  align-self: center;
  width: 40px;
  height: 40px;
  align-items: center;
  background: linear-gradient(to right, #40A1F7, #43CBF4);
  color: white;
  justify-content: center;
  border-radius: 20px;
}

.circle-text::after{
  border-radius: 20px;
}

.normal-text{
  display: flex;
  align-self: center;
  align-items: center;
  color: black;
  justify-content: center;
  word-wrap: break-word;
  word-break: break-all;
  min-width: 60px;
}
